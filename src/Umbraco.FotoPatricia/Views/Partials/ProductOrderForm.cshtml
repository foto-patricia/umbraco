@using System.Collections.Generic;
@using Umbraco.FotoPatricia.Controllers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Umbraco.FotoPatricia.Models.ProductOrderViewModel

@{
    var weekdays = new List<string>{"Montag", "Dienstag", "Mittwoch", "Donnerstag", "Freitag", "Samstag", "Sonntag"};
}

<div id="productOrderForm" class="block max-w-md mx-auto my-16 rounded-lg bg-white p-6 shadow-lg dark:bg-neutral-700">

@using (Html.BeginUmbracoForm<ProductOrderFormController>(nameof(ProductOrderFormController.Submit), null))
{
    <div class="relative mb-6">
        <select asp-for="Product" data-te-select-init>
            @foreach(var p in Model.Products)
            {
                var name = p.Name;
                var price = p.Price;
                var text = $"{name} (CHF {price})";
                
                <option value="@text">@text</option>
            }
        </select>
        <label asp-for="Product" data-te-select-label-ref>Produkt</label>
        <small
            id="productHelp"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("Product")</small>
    </div>
    <div class="relative mb-6" data-te-input-wrapper-init>
      <input
        type="text"
        class="peer block min-h-[auto] w-full rounded border-0 bg-transparent py-[0.32rem] px-3 leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
        asp-for="Name"
        placeholder="Name" />
      <label
        asp-for="Name"
        class="pointer-events-none absolute top-0 left-3 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-neutral-200"
        >Name
      </label>
      <small
            id="nameHelp"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("Name")</small>
    </div>
    <div class="relative mb-6" data-te-input-wrapper-init>
      <input
        type="email"
        class="peer block min-h-[auto] w-full rounded border-1 bg-transparent py-[0.32rem] px-3 leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
        asp-for="Email"
        placeholder="Email address" />
      <label
        asp-for="Email"
        class="pointer-events-none absolute top-0 left-3 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-neutral-200"
        >Email address
      </label>
      <small
            id="emailHelp"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("Email")</small>
    </div>
    <div class="relative mb-6" data-te-input-wrapper-init>
      <input
        type="text"
        class="peer block min-h-[auto] w-full rounded border-1 bg-transparent py-[0.32rem] px-3 leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
        asp-for="PhoneNumber"
        placeholder="Telefon / Mobile" />
      <label
        asp-for="PhoneNumber"
        class="pointer-events-none absolute top-0 left-3 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-neutral-200"
        >Telefon / Mobile
      </label>
      <small
            id="phoneHelp"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("PhoneNumber")</small>
    </div>
    <div class="relative mb-6" data-te-input-wrapper-init>
      <input
        type="text"
        class="peer block min-h-[auto] w-full rounded border-1 bg-transparent py-[0.32rem] px-3 leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
        asp-for="Address"
        placeholder="Adresse" />
      <label
        asp-for="Address"
        class="pointer-events-none absolute top-0 left-3 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-neutral-200"
        >Adresse
      </label>
      <small
            id="addressHelp"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("Address")</small>
    </div>
    <div class="relative mb-6">
        <select asp-for="PreferredWeekday1" data-te-select-init>
            <option value="" hidden selected></option>
            @foreach(var w in weekdays)
            {
                <option value="@w">@w</option>
            }
        </select>
        <label asp-for="PreferredWeekday1" data-te-select-label-ref>Wunschtermin 1</label>
        <small
            id="preferred1Help"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("PreferredWeekday1")</small>
    </div>
    <div class="relative mb-6">
        <select asp-for="PreferredWeekday2" data-te-select-init>
            <option value="" hidden selected></option>
            @foreach(var w in weekdays)
            {
                <option value="@w">@w</option>
            }
        </select>
        <label asp-for="PreferredWeekday2" data-te-select-label-ref>Wunschtermin 2</label>
        <small
            id="preferred2Help"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("PreferredWeekday2")</small>
    </div>
    <div class="relative mb-6" data-te-input-wrapper-init>
      <textarea
        class="peer block min-h-[auto] w-full rounded border-1 bg-transparent py-[0.32rem] px-3 leading-[1.6] outline-none transition-all duration-200 ease-linear focus:placeholder:opacity-100 data-[te-input-state-active]:placeholder:opacity-100 motion-reduce:transition-none dark:text-neutral-200 dark:placeholder:text-neutral-200 [&:not([data-te-input-placeholder-active])]:placeholder:opacity-0"
        asp-for="Message"
        rows="3"
        placeholder="Message"></textarea>
      <label
        asp-for="Message"
        class="pointer-events-none absolute top-0 left-3 mb-0 max-w-[90%] origin-[0_0] truncate pt-[0.37rem] leading-[1.6] text-neutral-500 transition-all duration-200 ease-out peer-focus:-translate-y-[0.9rem] peer-focus:scale-[0.8] peer-focus:text-primary peer-data-[te-input-state-active]:-translate-y-[0.9rem] peer-data-[te-input-state-active]:scale-[0.8] motion-reduce:transition-none dark:text-neutral-200 dark:peer-focus:text-neutral-200"
        >Message
      </label>
      <small
            id="messageHelp"
            class="absolute w-full text-red-600"
            data-te-input-helper-ref>@Html.ValidationMessage("Message")</small>
    </div>
    
    <button
      type="submit"
      class="w-full rounded bg-cyan-500 px-6 py-2.5 text-xs font-medium uppercase leading-tight text-white shadow-md transition duration-150 ease-in-out hover:bg-primary-700 hover:shadow-lg focus:bg-primary-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-primary-800 active:shadow-lg"
      data-te-ripple-init
      data-te-ripple-color="light">
      Jetzt Fotoshooting buchen
    </button>
}

</div>